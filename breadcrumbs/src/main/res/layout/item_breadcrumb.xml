<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_breadcrumb_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:background="?attr/selectableItemBackground"
            tools:text="text"/>

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_breadcrumb_IV"
            android:layout_marginStart="@dimen/breadcrumbs_component_margin"
            android:layout_marginEnd="@dimen/breadcrumbs_component_margin"
            android:layout_width="@dimen/breadcrumbs_icon_size"
            android:layout_height="@dimen/breadcrumbs_icon_size"
            app:srcCompat="@drawable/ic_next"/>

</android.support.v7.widget.LinearLayoutCompat>