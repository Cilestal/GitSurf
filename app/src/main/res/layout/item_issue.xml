<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_small_margin"
        android:layout_marginBottom="@dimen/card_small_margin">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/item_issue_layout"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/item_issue_user_avatar_IV"
                android:layout_width="@dimen/large_icon_size"
                android:layout_height="@dimen/large_icon_size"
                tools:src="@drawable/ic_user_avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/components_margin"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_marginStart="@dimen/components_margin"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_issue_owner_repo_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Subhead"
                tools:text="@string/issues_owner_repo"
                app:layout_constraintLeft_toRightOf="@+id/item_issue_user_avatar_IV"
                app:layout_constraintTop_toTopOf="@+id/item_issue_user_avatar_IV"
                app:layout_constraintRight_toLeftOf="@+id/item_issue_comments_IV"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_marginRight="@dimen/components_margin"
                android:layout_marginStart="@dimen/components_margin"
                android:layout_marginEnd="@dimen/components_margin"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_issue_title_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Subhead"
                tools:text="Title"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@+id/item_issue_owner_repo_TV"
                app:layout_constraintLeft_toRightOf="@+id/item_issue_user_avatar_IV"
                app:layout_constraintBottom_toTopOf="@+id/item_issue_opened_at_by_TV"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_marginRight="@dimen/components_margin"
                android:layout_marginStart="@dimen/components_margin"
                android:layout_marginEnd="@dimen/components_margin"
                app:layout_constraintHorizontal_bias="0.0"
                />

        <android.support.v7.widget.AppCompatImageView
                app:srcCompat="@drawable/ic_comment"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:layout_constraintRight_toLeftOf="@+id/item_issue_comments_TV"
                android:id="@+id/item_issue_comments_IV"
                app:layout_constraintTop_toTopOf="@+id/item_issue_owner_repo_TV"
                app:layout_constraintBottom_toBottomOf="@+id/item_issue_owner_repo_TV"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_issue_comments_TV"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Subhead"
                tools:text="0"
                app:layout_constraintBaseline_toBaselineOf="@+id/item_issue_owner_repo_TV"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/components_margin"
                android:layout_marginEnd="@dimen/components_margin"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_issue_opened_at_by_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/issues_opened_at_by"
                android:layout_marginRight="@dimen/components_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/item_issue_number_TV"
                android:layout_marginLeft="@dimen/components_small_margin"
                android:layout_marginStart="@dimen/components_small_margin"
                android:layout_marginEnd="@dimen/components_margin"
                android:paddingBottom="@dimen/components_small_padding"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintBottom_toBottomOf="@+id/item_issue_number_TV"
                app:layout_constraintTop_toTopOf="@+id/item_issue_number_TV"
                android:layout_marginBottom="@dimen/components_medium_padding"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_issue_number_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="#number"
                app:layout_constraintLeft_toRightOf="@+id/item_issue_user_avatar_IV"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_marginStart="@dimen/components_margin"
                android:layout_marginTop="@dimen/components_medium_margin"
                android:paddingBottom="@dimen/components_small_margin"
                app:layout_constraintTop_toBottomOf="@+id/item_issue_title_TV"
                app:layout_constraintRight_toLeftOf="@+id/item_issue_opened_at_by_TV"
                android:layout_marginEnd="@dimen/components_small_margin"/>

        <View
                android:id="@+id/item_issue_status_view"
                style="@style/AppTheme.IssueStatus"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/components_medium_margin"
                app:layout_constraintTop_toBottomOf="@+id/item_issue_opened_at_by_TV"
                app:layout_constraintVertical_bias="1.0"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>